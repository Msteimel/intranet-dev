  <button{{ attributes.addClass('btn').setAttribute('id', 'search_edit-submit') }}>
    <span class="fa fa-search" aria-hidden="true"></span>
    <span class="isu-search__search-btn-text">Submit search</span>
  </button>

{% endif %}
